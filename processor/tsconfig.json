{
    "compilerOptions": {
      "target": "ES6",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,     
      // "allowImportingTsExtensions": true,    
      // "noEmit": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["./src/*"]
      },
    },
    "include": ["src"],   // ✅ Moved outside compilerOptions
    "exclude": ["node_modules", "dist"] // ✅ Moved outside compilerOptions
  }