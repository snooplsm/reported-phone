{
    "compilerOptions": {
      "outDir": "./dist", 
      "rootDir": "./src",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "declaration": true,
      "emitDeclarationOnly": false,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src"]
  }